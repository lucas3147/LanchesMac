<li class="btn-group">
    <button class="btn btn-secondary">Lanches</button>
    <button class="btn btn-secondary dropdown-toggle dropdown-toggle-split" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="sr-only"></span>
    </button>
    <ul class="dropdown-menu">
        @foreach (var categoria in Model)
        {
            <li>
                <a class="dropdown-item" asp-controller="Lanche" asp-action="List"
               asp-route-categoria="@categoria.CategoriaNome" style="color:black">@categoria.CategoriaNome</a>
            </li>
        }


        <li class="dropdown-divider"></li>
        <li>
          <a class="dropdown-item" asp-controller="Lanche" asp-action="List" asp-route-categoria="" style="color:black">Todos</a>
        </li>
        
    </ul>
</li>